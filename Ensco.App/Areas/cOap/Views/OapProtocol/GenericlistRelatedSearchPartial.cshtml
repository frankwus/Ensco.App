@model IEnumerable<Ensco.App.Areas.Oap.Models.OapSearchCheckListQuestionFlatModel>
 
@{
    var genericListController = (dynamic) ViewContext.Controller;
     
    var errorkey = Ensco.App.Areas.Oap.Controllers.GridConstants.RelatedSearchErrorsKey;

    var errors = (ViewData[errorkey] ?? string.Empty).ToString();

    var grid = Html.DevExpress().GridView(settings =>
    {

        genericListController.ConfigureRelatedSearch(settings, Html, ViewContext);
    });

    if (!string.IsNullOrEmpty(errors))
    {
        grid.SetEditErrorText(errors);
    }
    grid.Bind(Model).GetHtml();
}

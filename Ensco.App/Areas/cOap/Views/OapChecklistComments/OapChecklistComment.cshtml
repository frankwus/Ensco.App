@model IEnumerable<Ensco.Irma.Oap.WebClient.Corp.OapChecklistComment>
@{
    ViewBag.Title = "Oap Checklist Comments";
}

@section scripts
{
    <script type="text/javascript">
               
        function onToolbarItemClick(s, e) {
            switch (e.item.name) {
                case "AddNewChecklistComment": 
                    s.AddNewRow();
                    break; 
            }
        }
    </script>
}

@*<h1 class="area-headers">@ViewBag.Title</h1>*@
<div class="oap-master-grid">
    <form>
        @Html.Partial("OapChecklistCommentPartial", Model)
    </form>   
</div>

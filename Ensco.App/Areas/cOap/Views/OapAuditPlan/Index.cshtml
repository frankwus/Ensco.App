                    group.Items.Add(item =>
                    {
                        item.Caption = " ";
                        item.SetNestedContent("Placeholder for the Scheduler");
                    });

                });
            }).GetHtml();
            ViewContext.Writer.Write("<br/>");
            Html.RenderPartial("OapCVTCompliancePartial", null);

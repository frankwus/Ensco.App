                layout.Width = Unit.Percentage(100);
                layout.Items.AddGroupItem(group =>
                {
                    group.Caption = "Quartely Sales";
                    group.Width = Unit.Percentage(100);
                    group.Items.Add(item =>
                    {
                        item.Caption = " ";
                        item.SetNestedContent("Placeholder for Graph");

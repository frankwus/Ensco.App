                });
            }).GetHtml();
            ViewContext.Writer.Write("<br/>");
            Html.RenderPartial("OapSummaryDetailsPartial", null);
            ViewContext.Writer.Write("<br/>");
            Html.RenderPartial("OapProtocolPartial", null);
            ViewContext.Writer.Write("<br/>");

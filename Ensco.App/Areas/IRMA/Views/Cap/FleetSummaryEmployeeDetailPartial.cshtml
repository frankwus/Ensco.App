@model Ensco.App.TLC.FleetSummaryModel

@using Ensco.App.App_Start

@{
    GridViewOptions options = new GridViewOptions();

    options.ShowAddButton = false;
    options.ShowEditButton = false;
    options.ShowDeleteButton = false;
    options.ShowCommandColumn = false;
    options.ShowTitle = false;

}

@Html.DevExpress().GridView(grid =>
{
    grid.Name = "grid_FleetSummaryEmployeeDetail";
    grid.KeyFieldName = Model.FleetSummaryEmployee.KeyFieldName;

    grid.CallbackRouteValues = new { Area = "Irma", Controller = "Cap", Action = "FleetSummaryEmployeeDetailPartial", passportId=Model.PassportId };

    Html.EnscoStandardGrid(grid, typeof(Ensco.TLC.Models.CAP_FleetSummaryEmployeeModel), options);

    grid.CommandColumn.Width = Unit.Pixel(25);

}).BindToLINQ(string.Empty, string.Empty, (s, e) =>
{
    e.KeyExpression = Model.FleetSummaryEmployee.KeyFieldName;
    e.QueryableSource = Model.FleetSummaryEmployee.Dataset;
}).GetHtml()




@model Ensco.Irma.Models.RigAdminManageModel

@{
    ViewBag.Title = "RigCompliance";
}
@section scripts
{
    <script type="text/javascript">
        MVCxClientGlobalEvents.AddControlsInitializedEventHandler(
            function (s, e) {
                AdjustMainGrid(gridView_ComplianceUsers); // grid is client side Id
            }
        );

        function AdjustSize() {
            $.event.trigger("AdjustOtherElements");
        }

        $(document).on("AdjustOtherElements", function () {
            AdjustMainGrid(gridView_ComplianceUsers); // grid is client side Id
        });

        function AdjustMainGrid(grid) {
            var height = $(window).height() - 200; // see if we can calculate footer height dynamically

            grid.SetHeight(height);
        }
    </script>
}

@using (Html.BeginForm())
{
    //Html.RenderAction("RigAdminCompliancePartial", "RigAdmin", new { Area = "IRMA" });
    Html.RenderAction("RigCompliancePartial", "RigAdmin", new { Area = "IRMA" });
}

